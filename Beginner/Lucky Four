import java.io.*;
import java.util.*;
class LuckFour{
    public static void main(String args[] ) {
       Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
       
        while(n-- >=1)
        {
            String s=sc.next();
            int r=s.length()-((s.replace("4","")).length());
            System.out.println(r);
            
        }
    }
}

